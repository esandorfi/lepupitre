{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Le Pupitre",
  "version": "0.1.0",
  "identifier": "com.emmanuelsandorfi.lepupitre",
  "build": {
    "beforeDevCommand": "pnpm -C ../ui dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm -C ../ui build",
    "frontendDist": "../ui/dist"
  },
  "app": {
    "windows": [
      {
        "title": "Le Pupitre",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
