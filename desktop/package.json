{
  "name": "lepupitre-desktop",
  "private": true,
  "version": "0.2.8",
  "description": "Local-first Tauri coach for talks, demos, and presentations. Practice your voice, keep your data local, improve every talk.",
  "type": "module",
  "packageManager": "pnpm@10.19.0",
  "scripts": {
    "dev": "pnpm tauri dev",
    "build": "pnpm asr:verify && pnpm tauri build",
    "tauri": "tauri",
    "asr:verify": "node ../scripts/verify-asr-sidecar.mjs",
    "ui:dev": "pnpm -C ui dev",
    "ui:build": "pnpm -C ui build",
    "ui:lint": "pnpm -C ui lint",
    "ui:lint:design": "pnpm -C ui lint:design",
    "ui:typecheck": "pnpm -C ui typecheck",
    "ui:test": "pnpm -C ui test",
    "docs:lint": "markdownlint-cli2 \"../README.md\" \"../CONTRIBUTING.md\" \"../CODE_OF_CONDUCT.md\" \"../SECURITY.md\" \"../CHANGELOG.md\" \"../docs/**/*.md\" \"../.github/PULL_REQUEST_TEMPLATE.md\"",
    "docs:lint:fix": "markdownlint-cli2 --fix \"../README.md\" \"../CONTRIBUTING.md\" \"../CODE_OF_CONDUCT.md\" \"../SECURITY.md\" \"../CHANGELOG.md\" \"../docs/**/*.md\" \"../.github/PULL_REQUEST_TEMPLATE.md\"",
    "changelog": "node ../scripts/changelog.mjs",
    "release:patch": "node ../scripts/release.mjs patch --no-tag",
    "release:minor": "node ../scripts/release.mjs minor --no-tag",
    "release:major": "node ../scripts/release.mjs major --no-tag",
    "release:tagpush": "node ../scripts/release-tagpush.mjs"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^2",
    "markdownlint-cli2": "^0.21.0"
  }
}
