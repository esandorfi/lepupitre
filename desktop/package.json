{
  "name": "lepupitre-desktop",
  "private": true,
  "version": "0.2.4",
  "description": "Local-first coach for preparing technical talks with daily quests, Boss Run audio sessions, actionable feedback, and peer review packs.",
  "type": "module",
  "scripts": {
    "dev": "pnpm tauri dev",
    "build": "pnpm tauri build",
    "tauri": "tauri",
    "ui:dev": "pnpm -C ui dev",
    "ui:build": "pnpm -C ui build",
    "ui:lint": "pnpm -C ui lint",
    "ui:lint:design": "pnpm -C ui lint:design",
    "ui:typecheck": "pnpm -C ui typecheck",
    "ui:test": "pnpm -C ui test",
    "changelog": "node ../scripts/changelog.mjs",
    "release:patch": "node ../scripts/release.mjs patch --no-tag",
    "release:minor": "node ../scripts/release.mjs minor --no-tag",
    "release:major": "node ../scripts/release.mjs major --no-tag",
    "release:tagpush": "node ../scripts/release-tagpush.mjs"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^2"
  }
}
